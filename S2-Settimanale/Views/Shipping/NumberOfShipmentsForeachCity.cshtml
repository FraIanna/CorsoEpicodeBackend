@model Dictionary<string, int>

@{
    ViewData["Title"] = "Numero delle spedizioni per ogni città";
}
<div class="minimal-height">
    <h2 class="display-6">Numero delle spedizioni per città destinataria</h2>
    <hr />
    @if (Model.Count == 0)
    {
        <p>Non ci sono dati da visualizzare.</p>
    }
    else
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Città</th>
                    <th>Numero di spedizioni</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Key</td>
                        <td>@item.Value</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>