@model List<S2_Settimanale.Services.Models.ShipmentStatus>

@{
    ViewData["Title"] = "Dettagli Spedizione";
}
<div class="minimal-height">
    <h2 class="display-6">Dettagli Spedizione</h2>
    <hr />
    <div class="custom-container p-3">
        @if (Model.Count == 0)
        {
            <p>Non ci sono aggiornamenti per la spedizione richiesta.</p>
        }
        else
        {
            <table class="table">
                <thead>
                    <tr>
                        <th>Data Aggiornamento</th>
                        <th>Stato</th>
                        <th>Luogo</th>
                        <th>Descrizione</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var aggiornamento in Model)
                    {
                        <tr>
                            <td>@aggiornamento.DataAggiornamento.ToString("dd/MM/yyyy HH:mm")</td>
                            <td>@aggiornamento.Stato</td>
                            <td>@aggiornamento.Luogo</td>
                            <td>@aggiornamento.Descrizione</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>
