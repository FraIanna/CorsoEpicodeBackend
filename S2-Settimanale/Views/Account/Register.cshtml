@using S2_Settimanale.Services.Models

@model Client

@{
    ViewData["Title"] = "Register";
}
<div>
    <h3 class="display-6">Registrati</h3>
    <hr />
    <div class="row">
        <div class="custom-container col-md-6 offset-md-3 col-8 offset-2">
            <form asp-action="Register" class="d-flex flex-column p-3">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="d-flex flex-column p-3">
                    <label asp-for="Nome" class="form-label"></label>
                    <input asp-for="Nome" class="form-custom" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="d-flex flex-column p-3">
                    <label asp-for="Tipo" class="form-label"></label>
                    <select asp-for="Tipo" class="form-custom">
                        <option value="true">Azienda</option>
                        <option value="false">Privato</option>
                    </select>
                </div>
                <div class="p-3" id="codiceFiscaleDiv">
                    <label asp-for="CodiceFiscale" class="form-label"></label>
                    <input asp-for="CodiceFiscale" class="form-custom" />
                </div>
                <div class="p-3" id="partitaIvaDiv">
                    <label asp-for="PartitaIva" class="form-label"></label>
                    <input asp-for="PartitaIva" class="form-custom" />
                </div>
                <div class="d-flex flex-column p-3">
                    <label asp-for="Indirizzo" class="form-label"></label>
                    <input asp-for="Indirizzo" class="form-custom" />
                    <span asp-validation-for="Indirizzo" class="text-danger"></span>
                </div>
                <div class="d-flex flex-column p-3">
                    <label asp-for="Città" class="form-label"></label>
                    <input asp-for="Città" class="form-custom" />
                    <span asp-validation-for="Città" class="text-danger"></span>
                </div>
                <div class="d-flex flex-column p-3">
                    <label asp-for="Cap" class="form-label"></label>
                    <input asp-for="Cap" class="form-custom" />
                    <span asp-validation-for="Cap" class="text-danger"></span>
                </div>
                <div class="d-flex flex-column p-3">
                    <label asp-for="Telefono" class="form-label"></label>
                    <input asp-for="Telefono" class="form-custom" />
                    <span asp-validation-for="Telefono" class="text-danger"></span>
                </div>
                <div class="d-flex flex-column p-3">
                    <button class="btn btn-outline-light">Registra Cliente</button>
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
