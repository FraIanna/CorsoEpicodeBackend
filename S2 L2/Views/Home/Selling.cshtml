@model S2_L2.Models.Selling

@{
    ViewData["Title"] = "Selling";

    var halls = ViewData["Halls"] as List<S2_L2.Models.Sala>;
}

<h1>Selling</h1>

<h4>Selling</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action = "SellingPost" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" required />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cognome" class="control-label"></label>
                <input asp-for="Cognome" class="form-control" required />
                <span asp-validation-for="Cognome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sala" class="control-label"></label>
                <select asp-for="Sala" name="Sala" class="form-select">
                      @if (halls != null)
                    {
                        foreach (var hall in halls)
                        {
                            <option value="@hall.Name">@hall.Name</option>
                        }
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="TipoBiglietto" class="control-label"></label>
                <select id="TipoBiglietto" name="TipoBiglietto" class="form-select">
                    <option value="Intero">Intero</option>
                    <option value="Ridotto">Ridotto</option>
                </select>
            </div>
            <div class="form-group">
                <button type="submit" value="Create" class="btn btn-primary mt-3" >Crea</button>
            </div>
        </form>
    </div>
</div>

<div>
    <a href="/Home">Torna alla Home</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
